<div class="container-xxl" style="width: 75%; margin: auto;">
  <h1 class="mt-5 mb-5">Information on <%= @course.title %> German language</h1>
  <p class="ml-5"><%#= @course.description %></p>
    <% if (@course.title == "A1" || @course.title == "A1.1" || @course.title == "A1.2") %>
    <div class="banner-course d-flex justify-content-between">
      <%= image_tag("A1.png", class: "image-course-a1") %>
      <%= image_tag("NA1.png", class: "image-course-small") %>
    </div>
     <% elsif (@course.title == "A2" || @course.title == "A2.1" || @course.title == "A2.2") %>
    <div class="banner-course d-flex justify-content-between">
      <%= image_tag("A2.png", class: "image-course") %>
      <%= image_tag("NA2.png", class: "image-course-small") %>
    </div>
    <% elsif (@course.title == "B1" || @course.title == "B1.1" || @course.title == "B1.2") %>
    <div class="banner-course d-flex justify-content-between">
      <%= image_tag("B1.png", class: "image-course") %>
      <%= image_tag("NB1.png", class: "image-course-small") %>
    </div>
    <% elsif (@course.title == "B2" || @course.title == "B2.1" || @course.title == "B2.2") %>
    <div class="banner-course d-flex justify-content-between">
      <%= image_tag("B2.png", class: "image-course") %>
      <%= image_tag("AB2.png", class: "image-course-small") %>
    </div>
    <% elsif (@course.title == "C1" || @course.title == "C1.1" || @course.title == "C1.2") %>
    <div class="banner-course d-flex justify-content-between">
      <%= image_tag("C1.png", class: "image-course") %>
      <%= image_tag("AC1.png", class: "image-course-small") %>
    </div>

    <% elsif (@course.title == "C2" || @course.title == "C2.1" || @course.title == "C2.2") %>
    <div class="banner-course">
      <%= image_tag("C2.png", class: "image-course-c2") %>
      <%#= image_tag("DC2.png", class: "image-course-small-c2") %>
    </div>
    <% else %>
    <div class="banner-course d-flex justify-content-between">
      <%= image_tag("15024_1082.jpg", class: "image-course") %>
      <%= image_tag("15024_543.jpg", class: "image-course-small") %>
    </div>
    <% end %>
  <div class="course-content">
    <div class="row">
      <div class="col-8">
        <div class="contact-person mt-3 d-flex justify-content-between">
          <div>
            <h6 class="mt-3">Your point of contact:</h6>
          </div>
            <div class="d-flex justify-content-between">
            <h5 class="mr-3 mt-3"><%= @course.user.first_name %></h5>
              <%= image_tag(current_user.avatar_thumbnail, class: "avatar-course mr-3", alt: "avatar") %>
            </div>
        </div>
        <br>
        <hr>
        <div class="course-info">
            <h2 class="mt-5">Level <%= @course.title %></h2>
            <% if @course.title == "A1" %>
              <h5>Getting started:</h5>
              <p class=""><%= @course.description %></p>
            <% elsif @course.title == "A2" %>
              <h5>Communicating basic information:</h5>
              <p class=""><%= @course.description %></p>
            <% elsif @course.title == "B1" %>
              <h5>Manage everyday situations:</h5>
              <p class=""><%= @course.description %></p>
            <% elsif @course.title == "B2" %>
              <h5>Be convincing:</h5>
              <p class=""><%= @course.description %></p>
            <% elsif @course.title == "C1" %>
              <h5>Communicate freely and express demands:</h5>
              <p class=""><%= @course.description %></p>
            <% elsif @course.title == "C2" %>
              <h5>Communicate freely and express demands:</h5>
              <p class=""><%= @course.description %></p>
            <% else %>
              <h5>Communicating basic information:</h5>
              <p class=""><%= @course.description %></p>
            <% end %>
        </div>
        <br>
        <br>
        <hr>
      </div>
    </div>
  </div>
