<div class="col">
  <%= simple_form_for(@course) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :description %>
      <div class="row">
        <div class="col mr-n2">
          <%= f.input :start_date, as: :string, input_html: {class: "datepicker", id: "range_start"} %>
        </div>
        <div class="col ml-n2">
          <%= f.input :end_date, as: :string, input_html: {class: "datepicker", id: "range_end"} %>
        </div>
      </div>
      <div class="row">
        <div class="col mr-n2">
          <%# end_time = start_time.strftime("%H:%M") %>
          <%= f.input :start_time, as: :time, minute_step: 15 %>
        </div>
        <div class="col mr-n2">
          <%# end_time = end_time.strftime("%H:%M") %>
          <%= f.input :end_time, as: :time, minute_step: 15 %>
        </div>
      </div>
      <div class="row">
        <div class="col mr-n2">
          <%= f.input :shift, label: "Time of Day", collection: [['Morning'], ['Afternoon'], ['Evening'], ['Special']] %>
        </div>
        <div class="col mr-n2">
          <%= f.input :price %>
        </div>
      </div>
      <div class="row">
        <div class="col mr-n2">
          <%= f.association :teacher, required: false, label: "Select Teachers" %>
        </div>
        <div class="col mr-n2">
          <%= f.association :user, required: false, label: "Administrator" %>
        </div>
      </div>
      <%= f.association :student, required: false, label: "Students" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn-create" %>
    </div>
  <% end %>
</div>
