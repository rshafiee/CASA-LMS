
<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <div class="row">
      <div class="col mr-n2">
        <%= f.input :start_date, as: :string, input_html: {class: "datepicker", id: "range_start"} %>
      </div>
      <div class="col ml-n2">
        <%= f.input :end_date, as: :string, input_html: {class: "datepicker", id: "range_end"} %>
      </div>
    </div>
    <%= f.input :start_time, as: :time %>
    <%= f.input :end_time, as: :time %>
    <%= f.input :shift, collection: [['Morning'], ['Afternoon'], ['Evening'], ['Special']] %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-create" %>
  </div>
<% end %>
