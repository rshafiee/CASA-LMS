<div class="container-xxl" style="width: 85%; margin: auto;">

  <h1 class="mt-5 text-center">Courses</h1>
  <div class="mt-3 mb-4">
    <%= link_to 'Add a new course', new_course_path, class: "btn-create" %>
  </div>
</div>
<br>
<div class="container-xxl" style="width: 85%; margin: auto;">
  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-6">
        <div class="card-course mb-5">
          <% if (course.title == "A1" || course.title == "A1.1" || course.title == "A1.2") %>
            <div class="card-course-img" style="background: url('<%= asset_url 'A1.png' %>'); background-size: cover;"></div>
          <% elsif (course.title == "A2" || course.title == "A2.1" || course.title == "A2.2") %>
            <div class="card-course-img" style="background: url('<%= asset_url 'A2.png' %>'); background-size: cover;"></div>
          <% elsif (course.title == "B1" || course.title == "B1.1" || course.title == "B1.2") %>
            <div class="card-course-img" style="background: url('<%= asset_url 'B1.png' %>'); background-size: cover;"></div>
          <% elsif (course.title == "B2" || course.title == "B2.1" || course.title == "B2.2") %>
            <div class="card-course-img" style="background: url('<%= asset_url 'B2.png' %>'); background-size: cover;"></div>
          <% elsif (course.title == "C1" || course.title == "C1.1" || course.title == "C1.2") %>
            <div class="card-course-img" style="background: url('<%= asset_url 'C1.png' %>'); background-size: cover;"></div>
          <% elsif (course.title == "C2" || course.title == "C2.1" || course.title == "C2.2") %>
            <div class="card-course-img" style="background: url('<%= asset_url 'C2.png' %>'); background-size: cover;"></div>
          <% else %>
            <div class="card-course-img" style="background: url('<%= asset_url '15024_1082.jpg' %>'); background-size: cover;"></div>
          <% end %>
          <div class="col">
            <div class="card-course-text">
              <h2 class="mt-n2">
                <%= course.title %>
                <% if course.title == "A1" %>
                  <h5>Getting started</h5>
                <% elsif course.title == "A2" %>
                  <h5>Communicating basic information</h5>
                <% elsif course.title == "B1" %>
                  <h5>Manage everyday situations</h5>
                <% elsif course.title == "B2" %>
                  <h5>Be convincing</h5>
                <% elsif course.title == "C1" %>
                  <h5>Communicate freely and express demands</h5>
                <% elsif course.title == "C2" %>
                  <h5>Communicate freely and express demands</h5>
                <% else %>
                  <h5>Specialized courses</h5>
                <% end %>
              </h2>
              <p><strong>Start date:</strong> <%= course.start_date %> - <strong>End date: </strong><%= course.end_date %></p>
              <p><strong>Start time:</strong> <%= course.start_time %> - <strong>End time: </strong><%= course.end_time %></p>
              <div class="price-form">
                <p>
                  <strong>Price:</strong>
                  <strong>â‚¬ </strong><%= course.price %>
                </p>
              </div>
              <div class="teacher">
                <p>
                  <strong>Teachers:</strong>
                  <%= course.teacher.first_name %> <%= course.teacher.last_name %>
                </p>
              </div>
              <div class="row d-flex justify-content-end">
                <%= link_to 'Show', course, class: "btn-info mr-1" %>
                <%= link_to 'Edit', edit_course_path(course), class: "btn-info mr-1" %>
                <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-info" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>

</div>

