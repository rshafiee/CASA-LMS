<div class="container">

  <h1 class="mt-5 text-center">Courses</h1>
<br>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Shift</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.title %></td>
          <td><%= course.description %></td>
          <td><%= course.start_date %></td>
          <td><%= course.end_date %></td>
          <td><%= course.start_time %></td>
          <td><%= course.end_time %></td>
          <td><%= course.shift %></td>
          <td><%= course.price %></td>
          <td><%= link_to 'Show', course, class: "btn-info" %></td>
          <td><%= link_to 'Edit', edit_course_path(course), class: "btn-info" %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Course', new_course_path, class: "btn-create" %>

</div>

